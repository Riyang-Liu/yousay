<!--                      body parts                        -->
<div class="container">
  <div class="row">
    <div id="leftBox" class="col-2">
      <a href="/women" id="top" class="selection">上衣</a>
      <hr class="separationLine">
      <a href="/women" id="bottom" class="selection">下衣</a>
      <hr class="separationLine">
      <a href="/women" id="dress" class="selection">连衣裙</a>
      <hr class="separationLine">
      <a href="/women" id="accessory" class="selection">配件</a>
    </div>
    <div id="rightBox" class="col">
        <% clothes.forEach(function(item){ %>
          <div class="card">
            <a href="/women/<%= item._id %>"><img id="clothes-imgs" class="card-img-top img-fluid" src=" <%= item.link %>" alt="Card image cap Responsive image"></a>
            <div class="card-block">
              <h4 class="card-title"><%= item.name %></h4>
              <p class="card-text">RMB <%= item.price %></p>
            </div>
          </div>
        <% }) %>
      </div>
  </div>
</div>




